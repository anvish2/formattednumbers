{
  "name": "formattednumbers",
  "displayName": "Formatted Numbers",
  "version": "0.0.5",
  "description": "Automatically render thousands separators",
  "icon": "resources/icon.png",
  "publisher": "anvish",
  "repository": {
    "type": "git",
    "url": "https://github.com/anvish2/formattednumbers"
  },
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "devDependencies": {
    "@types/vscode": "^1.74.0"
  },
  "files": [
    "extension.js",
    "package.json",
    "LICENSE",
    "readme.md",
    "resources/icon.png"
  ],
  "contributes": {
    "configuration": {
      "properties": {
        "formattedNumbers.style": {
          "order": 1,
          "type": "string",
          "default": "underline",
          "enum": [
            "underline",
            "inline"
          ],
          "description": "The style of the thousands separator.",
          "enumItemLabels": [
            "Underline",
            "Inline"
          ],
          "enumDescriptions": [
            "Insert separators under characters, keeping line width.",
            "Insert separators between characters, making line longer."
          ]
        },
        "formattedNumbers.useSpacing": {
          "order": 2,
          "type": "boolean",
          "default": true,
          "description": "Add spacing between number groups."
        },
        "formattedNumbers.useCharacter": {
          "order": 3,
          "type": "boolean",
          "default": false,
          "description": "Add separating character between number groups."
        },
        "formattedNumbers.formatAfterDecimal": {
          "order": 4,
          "type": "boolean",
          "default": true,
          "description": "Format also the digits after the decimal point. E.g.: 12,345.678,90."
        },
        "formattedNumbers.minLength": {
          "order": 5,
          "type": "integer",
          "default": 5,
          "minimum": 3,
          "description": "The minimum length of a number to be formatted. Recommended is 5, i.e. starting with 10,000."
        },
        "formattedNumbers.maxLength": {
          "order": 6,
          "type": "integer",
          "default": 500,
          "minimum": 3,
          "description": "The maximum length of a number to be formatted."
        },
        "formattedNumbers.throttle": {
          "order": 7,
          "type": "integer",
          "default": 300,
          "minimum": 0,
          "description": "The delay in milliseconds before updating decorations. Set to 0 for immediate updates."
        },
        "formattedNumbers.separatorOpacity": {
          "order": 8,
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 1,
          "description": "Opacity of a separator character. 0 is transparent, 1 is fully opaque."
        }
      }
    }
  }
}
